      <Button fx:id="btnCancel" layoutX="332.0" layoutY="183.0" mnemonicParsing="false" onAction="#cancelHandler" prefHeight="34.0" prefWidth="67.0" text="Cancel" />
      <Button layoutX="14.0" layoutY="352.0" mnemonicParsing="false" onAction="#handlerGetMovies" prefHeight="34.0" prefWidth="80.0" text="Get movies" />
