         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button layoutX="257.0" layoutY="352.0" mnemonicParsing="false" onAction="#handlerDownloadIMDBDatabase" prefHeight="34.0" prefWidth="160.0" text="Download IMDB database" />
   </children>
</AnchorPane>
